<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="0dp"
    tools:context=".ChoixJoueurs"
    android:background="@drawable/background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:background="#c9ffffff"
            android:padding="10dp">

            <Spinner
                android:id="@+id/spinnerJ1"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:prompt="@string/txtChoixJoueur1"
                android:text="@string/txtChoixJoueur1"
                tools:listitem="@android:layout/simple_spinner_item"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:background="#c7000000">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Service"
                android:id="@+id/textView"
                android:textColor="#ffffffff"
                android:gravity="center"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Joueurs"
                android:id="@+id/textView2"
                android:textColor="#ffffffff"
                android:gravity="center"
                android:layout_weight="4" />
        </LinearLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:background="#c9ffffff"
            android:padding="10dp">

            <Spinner
                android:id="@+id/spinnerJ2"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:prompt="@string/txtChoixJoueur2"
                android:text="@string/txtChoixJoueur2"
                tools:listitem="@android:layout/simple_spinner_item"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnJouer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="btnJouerOnClick"
        android:text="@string/btnJouer"
        android:background="@drawable/button_custom" />

    <Button
        android:id="@+id/btnPrecedent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnJouer"
        android:layout_alignBottom="@+id/btnJouer"
        android:layout_alignParentLeft="true"
        android:onClick="btnPrecedentOnClick"
        android:text="@string/btnPrecedent"
        android:background="@drawable/button_custom"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_alignBottom="@+id/linearLayout"
        android:gravity="center_horizontal">

        <RadioButton
            android:id="@+id/rbtnJ1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:checked="true"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/rbtnJ2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1" />
    </RadioGroup>

</RelativeLayout>