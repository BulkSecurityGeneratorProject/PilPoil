<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.ConnexionFragment">

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:id="@+id/layoutIntro1Title"
            android:layout_width="match_parent"
            android:layout_weight="0.8"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <com.project.app.pilpoil.Activity.CustomTextView
                android:textSize="@dimen/fontSizeTitleXL"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/intro_incontournable_title"
                android:textAllCaps="true"
                android:gravity="center"
                app:font="LobsterTwo-Regular.ttf" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutConnexion"
            android:layout_width="match_parent"
            android:layout_weight="0.6"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_thumb_up_white_48dp"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutNoAccount"
            android:layout_width="match_parent"
            android:layout_weight="1.6"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtViewCreateAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/intro_incontournable_text"
                    android:textSize="@dimen/fontSizeGeneral"
                    android:gravity="center"
                    android:paddingTop="50dp"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
