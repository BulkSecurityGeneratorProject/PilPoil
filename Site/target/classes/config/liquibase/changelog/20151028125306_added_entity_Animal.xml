<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql"/>
    <property name="autoIncrement" value="false" dbms="oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity Animal.
    -->
    <changeSet id="20151028125306" author="jhipster">
        <createTable tableName="animal">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}" >
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="nom" type="varchar(255)"/>
            <column name="age" type="varchar(255)"/>
            <column name="sexe" type="varchar(255)"/>
            <column name="tatouage" type="varchar(255)"/>
            <column name="puce" type="varchar(255)"/>
            <column name="photo" type="varchar(255)"/>
            <column name="races_id" type="bigint"/>
            <column name="type_animals_id" type="bigint"/>
            <column name="utilisateurs_id" type="bigint"/>
        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="races_id"
                                 baseTableName="animal"
                                 constraintName="fk_animal_races_id"
                                 referencedColumnNames="id"
                                 referencedTableName="race"/>

        <addForeignKeyConstraint baseColumnNames="type_animals_id"
                                 baseTableName="animal"
                                 constraintName="fk_animal_typeanimals_id"
                                 referencedColumnNames="id"
                                 referencedTableName="type_animal"/>

        <addForeignKeyConstraint baseColumnNames="utilisateurs_id"
                                 baseTableName="animal"
                                 constraintName="fk_animal_utilisateurs_id"
                                 referencedColumnNames="id"
                                 referencedTableName="utilisateur"/>

        <createTable tableName="animal_couleurs">
            <column name="couleurss_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="animals_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="animals_id, couleurss_id" tableName="animal_couleurs"/>

        <addForeignKeyConstraint baseColumnNames="animals_id"
                                 baseTableName="animal_couleurs"
                                 constraintName="fk_animal_couleurs_couleur_id"
                                 referencedColumnNames="id"
                                 referencedTableName="animal"/>

        <addForeignKeyConstraint baseColumnNames="couleurss_id"
                                 baseTableName="animal_couleurs"
                                 constraintName="fk_couleur_couleurs_animal_id"
                                 referencedColumnNames="id"
                                 referencedTableName="couleur"/>
        
    </changeSet>
</databaseChangeLog>
