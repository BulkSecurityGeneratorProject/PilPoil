<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql"/>
    <property name="autoIncrement" value="false" dbms="oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity Annonce.
    -->
    <changeSet id="20151028125306" author="jhipster">
        <createTable tableName="annonce">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}" >
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="description" type="varchar(255)"/>
            <column name="recuperer" type="bit"/>
            <column name="date_evenement" type="varchar(255)"/>
            <column name="telephone_annonceur" type="varchar(255)"/>
            <column name="mail_annonceur" type="varchar(255)"/>
            <column name="adresse" type="varchar(255)"/>
            <column name="complement_adresse" type="varchar(255)"/>
            <column name="code_postal" type="varchar(255)"/>
            <column name="ville" type="varchar(255)"/>
            <column name="pays" type="varchar(255)"/>
            <column name="longitude" type="varchar(255)"/>
            <column name="lattitude" type="varchar(255)"/>
            <column name="type_annonces_id" type="bigint"/>
            <column name="utilisateurs_id" type="bigint"/>
            <column name="animals_id" type="bigint"/>
        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="type_annonces_id"
                                 baseTableName="annonce"
                                 constraintName="fk_annonce_typeannonces_id"
                                 referencedColumnNames="id"
                                 referencedTableName="type_annonce"/>

        <addForeignKeyConstraint baseColumnNames="utilisateurs_id"
                                 baseTableName="annonce"
                                 constraintName="fk_annonce_utilisateurs_id"
                                 referencedColumnNames="id"
                                 referencedTableName="utilisateur"/>

        <addForeignKeyConstraint baseColumnNames="animals_id"
                                 baseTableName="annonce"
                                 constraintName="fk_annonce_animals_id"
                                 referencedColumnNames="id"
                                 referencedTableName="animal"/>

    </changeSet>
</databaseChangeLog>
